<Window x:Class="KursyWalutNBP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kursy walut NBP" Height="378" Width="554" Icon="green_dollar.ico" KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="33"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="wyborWaluty" SelectionChanged="wyborWaluty_SelectionChanged" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Margin="10,0"/>
        <ListBox x:Name="listBox" Grid.ColumnSpan="2" Grid.Row="2" Margin="10,3,10,10"/>
        <ComboBox x:Name="wyborTabeli" SelectionChanged="wyborTabeli_SelectionChanged" Margin="10,0" Grid.Row="1" VerticalAlignment="Center"/>
        <Label x:Name="tabelaLabel" Content="Wybierz tabelę" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="273" HorizontalAlignment="Center"/>
        <Label x:Name="walutaLabel" Content="Wybierz walutę" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" Width="273"/>

    </Grid>
</Window>
